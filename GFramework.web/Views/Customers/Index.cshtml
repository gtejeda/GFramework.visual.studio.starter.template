@model IList<$ext_projectname$.application.DTOs.CustomerDTO>

<h1>List of Customers</h1>
<br />
<a href="/Customers/Create" class="btn btn-default">Create Customer</a>
<br/>
<table class="table table-responsive">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Valid</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.IsActive</td>
                <td><a href="/Customers/Edit/@item.Id" class="btn btn-default">Edit</a></td>
                <td><a href="/Customers/Activate/@item.Id" class="btn btn-warning">Activate</a></td>
                <td><a href="/Customers/Delete/@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a></td>
            </tr>
        }
    }

</table>